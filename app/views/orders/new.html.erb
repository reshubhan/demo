<h1>New order</h1>

<% form_for(@order) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :orders_details %><br />
    <%= f.text_field :orders_details %>
  </p>
  <p>
    <%= f.label :total_price %><br />
    <%= f.text_field :total_price %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', orders_path %>